{
  "name": "cloud-summit-2025",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run local:dev",
    "start": "npm run prod:start",
    "build": "npm run prod:build",
    "lint": "npm run local:lint",

    "local:dev": "next dev",
    "local:start": "next start",
    "local:build": "next build",
    "local:lint": "next lint",
    
    "local:setup": "npm install && npm run local:db:stop && npm run local:db:setup && npm run local:db:push && npm run local:db:seed",
    
    "local:db:start": "brew services start mongodb-community",
    "local:db:stop": "brew services stop mongodb-community",
    "local:db:restart": "brew services restart mongodb-community",
    
    "local:db:setup": "cross-env NODE_ENV=development ./scripts/setup-mongodb.sh",
    "local:db:push": "cross-env NODE_ENV=development prisma db push",
    "local:db:seed": "cross-env NODE_ENV=development ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "local:db:clean": "cross-env NODE_ENV=development ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts --clean",
    "local:db:studio": "cross-env NODE_ENV=development prisma studio",

    "staging:build": "cross-env NODE_ENV=staging prisma generate && next build",
    "staging:start": "cross-env NODE_ENV=staging next start -p ${PORT:-3000}",
    "staging:db:seed": "cross-env NODE_ENV=staging ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "staging:db:clean": "cross-env NODE_ENV=staging ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts --clean",

    "prod:build": "cross-env NODE_ENV=production next build",
    "prod:start": "cross-env NODE_ENV=production next start"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "@next/third-parties": "^15.1.6",
    "@prisma/client": "^6.3.0",
    "mongodb": "^6.13.0",
    "next-auth": "^5.0.0-beta.25",

    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "embla-carousel-autoplay": "^8.5.2",
    "embla-carousel-react": "^8.5.2",
    "framer-motion": "^11.11.17",
    "lucide-react": "^0.438.0",
    "sonner": "^1.7.4",

    "autoprefixer": "^10.4.20",
    "caniuse-lite": "^1.0.30001697",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",

    "prisma": "^6.3.0",
    "ts-node": "^10.9.2",
    "cross-env": "^7.0.3",

    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.45",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.10"
  }
}
